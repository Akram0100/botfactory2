# =================================
# BotFactory AI - Environment Variables
# =================================

# Application
APP_NAME="BotFactory AI"
DEBUG=false
SECRET_KEY=your-super-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/botfactory
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Google Gemini AI
GOOGLE_API_KEY=your-gemini-api-key-here
AI_MODEL=gemini-2.0-flash-exp
AI_MAX_TOKENS=2000

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# WhatsApp (Meta)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=botfactory_verify

# Instagram
INSTAGRAM_ACCESS_TOKEN=

# PayMe
PAYME_MERCHANT_ID=
PAYME_SECRET_KEY=

# Click
CLICK_MERCHANT_ID=
CLICK_SERVICE_ID=
CLICK_SECRET_KEY=

# Uzum
UZUM_MERCHANT_ID=
UZUM_SECRET_KEY=

# Subscription Prices (UZS)
PRICE_STARTER=165000
PRICE_BASIC=290000
PRICE_PREMIUM=590000

# Webhook URLs (Set in production)
WEBHOOK_BASE_URL=https://your-domain.com
